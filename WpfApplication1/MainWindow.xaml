<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="560" Width="840">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="335*"/>
            <ColumnDefinition Width="55*"/>
            <ColumnDefinition Width="127*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="button_1_path" Content="Choose" HorizontalAlignment="Left" Height="25" Margin="310,55,0,0" VerticalAlignment="Top" Width="65" Click="button_1_path_Click" IsDefault="True" FontFamily="Arial"/>
        <Button x:Name="button1" Content="Copy" HorizontalAlignment="Left" Height="35" Margin="473,367,0,0" VerticalAlignment="Top" Width="117" Click="button_Copy_Click" Grid.ColumnSpan="2"/>
        <TextBox x:Name="textBox_1_number" HorizontalAlignment="Left" Height="25" Margin="400,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="40" TextChanged="textBox_1_number_TextChanged"/>
        <TextBox x:Name="textBox_2_number" HorizontalAlignment="Left" Height="25" Margin="400,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="40" TextChanged="textBox_2_number_TextChanged" RenderTransformOrigin="0.091,0.5"/>
        <TextBox x:Name="textBox_3_number" HorizontalAlignment="Left" Height="25" Margin="400,180,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="40" TextChanged="textBox_3_number_TextChanged"/>
        <TextBox x:Name="result" HorizontalAlignment="Left" Height="29" Margin="10,361,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="137"/>
        <Button x:Name="count" Content="Count" HorizontalAlignment="Left" Height="35" Margin="175,361,0,0" VerticalAlignment="Top" Width="95" Click="count_Click"/>
        <Button x:Name="button_2_path" Content="Choose" HorizontalAlignment="Left" Height="25" Margin="310,115,0,0" VerticalAlignment="Top" Width="65" Click="button_2_path_Click" IsDefault="True" FontFamily="Arial"/>
        <Button x:Name="button_3_path" Content="Choose" HorizontalAlignment="Left" Height="25" Margin="310,180,0,0" VerticalAlignment="Top" Width="65" Click="button_3_path_Click" IsDefault="True" FontFamily="Arial"/>
        <TextBox x:Name="textBox_destination_path" HorizontalAlignment="Left" Height="25" Margin="80,295,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" TextChanged="textBox_desination_path_TextChanged"/>
        <Button x:Name="button_destination_path" Content="Destination" HorizontalAlignment="Left" Height="25" Margin="360,295,0,0" VerticalAlignment="Top" Width="90" Click="button_destination_path_Click"/>
        <Label x:Name="label_1_path" Content="" HorizontalAlignment="Left" Height="25" Margin="20,55,0,0" VerticalAlignment="Top" Width="270" BorderThickness="0" Background="#FFCDCDCD" BorderBrush="#FFCDCDCD"/>
        <Label x:Name="label_2_path" Content="" HorizontalAlignment="Left" Height="25" Margin="20,115,0,0" VerticalAlignment="Top" Width="270" Background="#FFCDCDCD" BorderBrush="#FFCDCDCD"/>
        <Label x:Name="label_3_path" Content="" HorizontalAlignment="Left" Height="25" Margin="20,180,0,0" VerticalAlignment="Top" Width="270" Background="#FFCDCDCD"/>
        <Label x:Name="done" Grid.ColumnSpan="3" Content="" HorizontalAlignment="Left" Height="25" Margin="485,295,0,0" VerticalAlignment="Top" Width="210"/>
        <Label x:Name="label_result_1_path" Content="" HorizontalAlignment="Left" Height="25" Margin="480,55,0,0" VerticalAlignment="Top" Width="240" BorderThickness="0" Background="#FFCDCDCD" BorderBrush="#FFCDCDCD" Grid.ColumnSpan="3"/>
        <Button x:Name="button_result_1_path" Content="Choose" HorizontalAlignment="Left" Height="25" Margin="107,55,0,0" VerticalAlignment="Top" Width="65" Click="button_result_1_path_Click" IsDefault="True" FontFamily="Arial" Grid.Column="2"/>

    </Grid>
</Window>
